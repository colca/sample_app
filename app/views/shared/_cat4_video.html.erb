<div class="J-list">
      <div class="list-title">
        <h3>Breaking Videos</h3>
        <span><%= link_to "More", categories_path+'/4' %></span>
      </div>
      <div class="button-left" id="c4f-left-button"></div>
      <div class="button-right" id="c4f-right-button"></div>
  <div class="video-feeds" id="category4-feeds">
      <ul class="video-feeds-container" id="cat4-feeds-container">
        <%= render partial: 'shared/video_item', collection: @category4_feeds %>
      </ul>
  </div>
</div>
<script>
$(document).ready(function(){
  var container = $('#cat4-feeds-container');
  $('#c4f-right-button').on('click',function(){
    console.log('check');
    console.log(container.length);
    var leftPos = container.position().left;
    var posNew = leftPos-746;
    container.css('left',posNew+'px');
  });
  $('#c4f-left-button').on('click',function(){
    console.log('check');
    var leftPos = container.position().left;
    console.log(leftPos);
    if(leftPos>=-12) {
      return;
    }
    var posNew = leftPos+746;
    container.css('left',posNew+'px');
  });
});
</script>

