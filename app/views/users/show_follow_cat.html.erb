<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
	      <span><%= link_to "view my profile", @user %></span>
      <span><b>Followed Genres:</b> <%= @user.categories.count %><br><b>Followed Dancers:</b></br> <%= @user.dancers.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>

    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @categories.any? %>
      <ul class="categories">
        <%= render @categories %>
      </ul>
    <% end %>
  </div>
</div>
